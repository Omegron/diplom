<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Diary.DiaryEntryActivity"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_diary_entry">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Оберіть емоцію дня"
        android:textSize="20sp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/entryNote"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:ems="15"
        android:inputType="text"
        android:hint="Підсумок (не обов'язково)"
        android:autofillHints="g" />

    <Button
        android:id="@+id/emotionSave"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Зберегти"
        android:textColor="@color/black"
        android:background="@null"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:textSize="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/emotions_container1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="30dp"
                android:paddingTop="30dp">

                <ImageView
                    android:id="@+id/emotion_7"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/mood_7"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="60dp">

                <ImageView
                    android:id="@+id/emotion_0"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/mood_0"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingRight="30dp"
                android:paddingTop="30dp">

                <ImageView
                    android:id="@+id/emotion_1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/mood_1"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/emotions_container2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingRight="30dp">

                <ImageView
                    android:id="@+id/emotion_6"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/mood_6"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/emotion_choice"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/mood_0"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="30dp">

                <ImageView
                    android:id="@+id/emotion_2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/mood_2"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/emotions_container3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="30dp"
                android:paddingTop="30dp">

                <ImageView
                    android:id="@+id/emotion_5"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/mood_5"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="60dp">

                <ImageView
                    android:id="@+id/emotion_4"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/mood_4"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingRight="30dp"
                android:paddingTop="30dp">

                <ImageView
                    android:id="@+id/emotion_3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/mood_3"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>




</LinearLayout>